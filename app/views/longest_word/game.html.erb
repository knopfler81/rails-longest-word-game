<h1>Welcome on the Longest word game</h1>
 <p>Here is your grid:</p>
 <h4><%= @grid %></h4>


<form action="/score" method="post">
  <label for="question">What is your attempt?</label>
  <br>
  <input type="text" id="question" name="attempt" placeholder="enter a word" class="form-control">
  <%= hidden_field_tag :start_time, @start_time %>
  <%= hidden_field_tag :grid, @grid %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <input type="submit" value="Go on!" class="btn btn-primary">
</form>
